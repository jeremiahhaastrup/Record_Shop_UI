<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BtnTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/button_text_or_icon_color_selector</item>
        <item name="backgroundTint">@color/button_background_color_selector</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="BtnGenreStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/button_text_or_icon_color_selector</item>
        <item name="android:backgroundTint">@color/button_genre_color_selector</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="BtnSubTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/green</item>
        <item name="textAllCaps">false</item>
    </style>

    <!--Button-->
    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/button_text_or_icon_color_selector</item>
        <item name="backgroundTint">@color/button_background_color_selector</item>
        <item name="cornerRadius">20dp</item>
        <item name="tint">@color/white</item>
        <item name="elevation">10dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomEditButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">@color/white</item>
        <item name="android:background">@drawable/btn_edit_round</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

<!--TextInputEditText-->
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/white</item>
        <item name="background">@android:color/transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="hintTextAppearance">@style/CustomHintTextAppearance</item>
    </style>

    <style name="CustomHintTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

<!--Toolbar-->
    <style name="CustomToolBar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/white</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="titleTextColor">@color/green</item>
    </style>

<!--BottomNavigationView-->

    <style name="CustomBottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/light_black</item>
        <item name="itemIconTint">@color/navigation_icon_text_color_selector</item>
        <item name="itemTextColor">@color/navigation_icon_text_color_selector</item>
        <item name="itemRippleColor">@android:color/transparent</item>
    </style>

<!--SwitchCompact-->

    <style name="CustomSwitchCompat" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:thumbTint">@color/thumb_switch_color</item>
        <item name="android:trackTint">@color/thumb_track_color</item>
        <item name="android:textColor">@color/white</item>
    </style>

<!--FloatingButton-->

    <style name="CustomFloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/green</item>
        <item name="tint">@color/white</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Fab</item>
        <item name="elevation">6dp</item>
        <item name="hoveredFocusedTranslationZ">8dp</item>
    </style>

    <style name="ShapeAppearance.Fab" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

<!--TabLayout-->

    <style name="CustomTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabRippleColor">@color/green</item>
        <item name="tabSelectedTextColor">@color/green</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabTextColor">@color/green</item>
        <item name="tabIndicatorColor">@color/green</item>
        <item name="tabBackground">@color/white</item>
    </style>

    <style name="TabTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

<!--CardView-->
    <style name="CustomCardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_margin">4dp</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="strokeColor">@color/green</item>
        <item name="strokeWidth">2dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

</resources>